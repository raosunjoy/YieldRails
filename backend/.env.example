CHAINALYSIS_TIMEOUT=10000
CHAINALYSIS_RETRY_ATTEMPTS=3
CHAINALYSIS_RETRY_DELAY=1000

# KYC Provider Configuration
KYC_PROVIDER=jumio
KYC_API_KEY=your-kyc-api-key
KYC_API_SECRET=your-kyc-api-secret
KYC_BASE_URL=https://api.jumio.com
KYC_WEBHOOK_SECRET=your-kyc-webhook-secret
