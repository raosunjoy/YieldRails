# YieldRails Mobile Environment Configuration

# API Configuration
API_BASE_URL=https://api.yieldrails.com
API_VERSION=v1
WEBSOCKET_URL=wss://api.yieldrails.com/ws

# Blockchain Configuration
ETHEREUM_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_KEY
POLYGON_RPC_URL=https://polygon-mainnet.alchemyapi.io/v2/YOUR_KEY
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_KEY
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_KEY

# Testnet URLs
ETHEREUM_TESTNET_RPC_URL=https://eth-goerli.alchemyapi.io/v2/YOUR_KEY
POLYGON_TESTNET_RPC_URL=https://polygon-mumbai.alchemyapi.io/v2/YOUR_KEY

# Contract Addresses
YIELD_ESCROW_CONTRACT=0x...
YIELD_VAULT_CONTRACT=0x...
CROSS_CHAIN_BRIDGE_CONTRACT=0x...

# WalletConnect Configuration
WALLET_CONNECT_PROJECT_ID=your_walletconnect_project_id
WALLET_CONNECT_RELAY_URL=wss://relay.walletconnect.com

# Firebase Configuration (for push notifications)
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_MESSAGING_SENDER_ID=your_sender_id

# Analytics Configuration
MIXPANEL_TOKEN=your_mixpanel_token
AMPLITUDE_API_KEY=your_amplitude_api_key

# App Configuration
APP_ENV=development
DEBUG_MODE=true
ENABLE_FLIPPER=true
ENABLE_ANALYTICS=false

# Security Configuration
BIOMETRIC_AUTH_ENABLED=true
PIN_AUTH_ENABLED=true
AUTO_LOCK_TIMEOUT=300000

# Feature Flags
ENABLE_CROSS_CHAIN=true
ENABLE_YIELD_STRATEGIES=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_BIOMETRIC_AUTH=true

# External Services
COINGECKO_API_URL=https://api.coingecko.com/api/v3
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest

# Development Configuration
REACT_NATIVE_PACKAGER_HOSTNAME=localhost
FLIPPER_DISABLE_PLUGINS=false